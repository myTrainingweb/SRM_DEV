                $('#lstStatus :selected').each(function (i, sel) {
                    if (i == 0) {
                        statusId = "'" + ($(sel).val()) + "'";
                        status = ($(sel).text());
                    }
                    else {
                        statusId += "," + "'" + ($(sel).val()) + "'";
